            top: 0;
        }
        td.data2Col.first span div.message.infoM3 {
            width: 690px;
        }
        a.btn {
            text-decoration: none;
            padding: 4px 3px;
            position: absolute;
        }
        a.btn:hover {
            text-decoration: none;
            color: black;
        }
