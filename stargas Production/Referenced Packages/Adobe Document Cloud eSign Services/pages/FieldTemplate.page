<apex:page standardController="echosign_dev1__Field_Template__c" extensions="echosign_dev1.FieldTemplateController" tabStyle="echosign_dev1__Agreement_Template__c">
	<script>
  		function confirmCancel() {
      		var isCancel = confirm("{!$Label.Cancel_Confirm_Prompt}");
      		if( isCancel ) {
      			return true;
  			}
  			
     		return false;
  		}  
  	</script>
  
  	<apex:sectionHeader title="{!$Label.Template_Fields_Section_Header}" subtitle="{!sectionSubtitle}" />
    
    <apex:form >
    	<apex:pagemessages id="theMessages"/>
		<apex:pageBlock id="wizardPageBlock" title="{!blockTitle}">
			<apex:pageBlockButtons >
       			<apex:commandButton id="backButton" action="{!doBack}" value="{!$Label.Back_Button_Label}" rerender="theMessages,fieldTemplateDescription,stepTypeSection,stepValueSection,wizardPageBlock,saveButton,backButton,nextButton" rendered="{!isStepValue}" />
       			<apex:commandButton id="nextButton" action="{!doNext}" value="{!$Label.Next_Button_Label}" rerender="theMessages,fieldTemplateDescription,stepTypeSection,stepValueSection,wizardPageBlock,saveButton,backButton,nextButton" rendered="{!isStepType}" />
       			<apex:commandButton id="saveButton" action="{!doSave}" value="{!$Label.Save_Button_Label}" rendered="{!isStepValue}" />
        		<apex:commandButton action="{!cancel}" value="{!$Label.Cancel_Button_Label}" onclick="return confirmCancel()" immediate="true"/>
        	</apex:pageBlockButtons>
        	<apex:outputPanel id="fieldTemplateTypeDescription" rendered="{!isStepType}">
        		{!$Label.Template_Fields_Description_1}<br/>
        		<br/>{!$Label.Template_Fields_Description_2} <br/>{!$Label.Template_Master_Label}{!masterObjectName} {!$Label.Template_Fields_Description_3}
      			<br/><br/>
      		</apex:outputPanel>
      		<apex:outputPanel id="fieldTemplateValueConstantDescription" rendered="{!isStepValueConstant}">
        		{!$Label.Template_Fields_Description_4}
      			<br/><br/>
      		</apex:outputPanel>
      		<apex:outputPanel id="fieldTemplateValueFieldDescription" rendered="{!isStepValueField}">
        		{!$Label.Template_Fields_Description_5}{!masterObjectName} {!$Label.Template_Fields_Description_6}
      			<br/><br/>
      		</apex:outputPanel>
      		<apex:pageBlockSection id="stepTypeSection" columns="1">
      			<apex:inputField id="fieldTemplateType" value="{!fieldTemplate.echosign_dev1__Type__c}" required="true" rendered="{!isStepType}"/>
      		</apex:pageBlockSection>
      		<apex:pageBlockSection id="stepValueSection" columns="1">
      			<apex:inputField id="fieldTemplateConstantValue" value="{!fieldTemplate.echosign_dev1__Constant_Value__c}" rendered="{!isStepValueConstant}"/>
      			<apex:selectList id="fieldTemplateFieldValue" value="{!fieldTemplate.echosign_dev1__Field_Value__c}" size="1" rendered="{!isStepValueField}"> 
                	<apex:selectOptions value="{!masterFieldOptions}"/>    
               	</apex:selectList>
               	<apex:selectList id="fieldTemplateAgreementField" value="{!fieldTemplate.echosign_dev1__Agreement_Field__c}" size="1" required="true" rendered="{!isStepValue}"> 
                	<apex:selectOptions value="{!agreementFieldOptions}"/>    
               	</apex:selectList>
      		</apex:pageBlockSection>
  		</apex:pageBlock>
	</apex:form>

</apex:page>