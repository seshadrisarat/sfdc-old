<apex:page Controller="lmsilt.ILTSettings">
	<apex:includeScript value="{!URLFOR($Resource.lmsilt__jquery, 'jquery-1.7.min.js')}" />
	<style type="text/css">
		.rightAdd{
			background: transparent url(/img/alohaSkin/combobox_arrows_sprite.gif) no-repeat;
