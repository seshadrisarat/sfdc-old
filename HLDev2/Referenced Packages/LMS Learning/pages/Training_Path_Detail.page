		jQuery('input[value$="Edit sequence"], input[value$="Edit Sequence"]').css('visibility','visible');
		jQuery('input[value$="Edit sequence"], input[value$="Edit Sequence"]').parents('.bPageBlock').find('.pShowMore').css('visibility', 'visible');
	}

