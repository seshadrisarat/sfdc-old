<apex:composition template="{!$Site.Template}">
<apex:define name="body">

<div style="position:relative;height:100px;" id="CA_INSIDE">
<c:calendar date="" 
    view="month" 
    urlparams="l_ds=0&r_c=0&site=1&sb=1" 
    namespace=""
    readonly="{
        edit            : false, 
        create          : false, 
        detail          : false, 
        move            : false, 
        hover           : true, 
        contextEvent    : false, 
        contextCalendar : false, 
        contextArea     : false
    }"
    
></c:calendar>
</div>
