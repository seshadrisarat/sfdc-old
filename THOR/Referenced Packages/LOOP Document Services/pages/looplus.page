            if ('{!JSENCODE(breadCrumbUrl)}' != '' && '{!JSENCODE(headerTitle)}' != '' && jQuery('#dlbc').size() < 1)
                jQuery('.bPageTitle:first').append('<div class="ptBreadcrumb" id="dlbc"><a href="{!JSENCODE(breadCrumbUrl)}" '+bcTarget+'> Â« {!JSENCODE($Label.DDP_Breadcrumb)} {!JSENCODE(headerTitle)}</a></div>');
