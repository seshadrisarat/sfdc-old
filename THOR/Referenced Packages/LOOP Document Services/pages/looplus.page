function receiveMessage(e) {
    var pattern = /(^https:\/\/[^.\/]+.drawloop.com)|(^http:\/\/localhost:1948)/gi;
    if (pattern.test(e.origin))
    {
        if ((/^https:/gi).test(e.data))
