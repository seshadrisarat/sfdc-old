			                var v = (navigator.appVersion).match(/OS (\d+)_(\d+)_?(\d+)?/);
			                versions = [parseInt(v[1], 10), parseInt(v[2], 10), parseInt(v[3] || 0, 10)];
			            }

			            //get the proper link depending on version
