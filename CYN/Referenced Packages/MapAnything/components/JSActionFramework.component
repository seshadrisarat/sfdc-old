	           	'Clear Coordinates': {
	           		Label: "{!$Label.MAActionFramework_Clear_Coordinates}", Type: 'Standard Action', Modes: ['Desktop'], Layouts: ['Tooltip', 'Mass'], Requirements: [], Action: 'Javascript', ActionValue: function (options) {
