        		setTimeout(function () {
        			
        			//remove existing data for matching records
		        	var $permissionsGrid = $('#permissions-grid');
		           	$permissionsGrid.data('matchingRecords', {});
		           	
		           	//perform the search
		           	var matchCount = 0;
		           	var matchingRecords = $permissionsGrid.data('matchingRecords');
