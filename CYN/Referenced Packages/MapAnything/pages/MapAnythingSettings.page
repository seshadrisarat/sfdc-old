                    });
                    var $datetimeFields = $('#TopTabs-RouteCalendarSettings select[data-field="dateTime"]').html('<option value="--Please Choose--">--Please Choose--</option>');
                    $.each(response.AvailableFields.Datetime, function (index, field) {
