<apex:component controller="SL_ContractReviewPDF" access="global">
<apex:attribute name="isPDF" description="This variable is used to check whether the component has been loaded from PDF or not." type="Boolean"/>
<head>
			<style> 
			html{
				margin:0px;
				padding:0px; 
			}
			
			body 
			{
				font-weight: normal;
				padding:0px;
				margin:0px;
			}
			
			@page 
			{ 
  				size: A4 landscape; /* ISO/JIS A4 (210mm×297mm) */ 
 				margin: 5mm;
				margin-bottom : 15mm;
				@bottom-right 
				{
		    		content: element(footer);
				}
			}
		    div.footer 
			{                
          		display: block;             
          		position: running(footer);
         		text-align: left;
      		}
		    .pagenumber:before {                
		        content: counter(page);             
		    }                       
		 
		    .pagecount:before {             
		        content: counter(pages);            
		    }	
		
			.tableStyle {
				border-collapse: collapse;
				-fs-table-paginate: paginate;
			}
		
			.tableStyle td {
				border-top: none;
				font-size: 10pt;
				vertical-align: top;
				text-align: center;
				letter-spacing:1px;
				
			}
			
			.tableStyle td.firstColumn {
				text-align: left;
			}
			
			.tableStyle td.total {
				font-weight: bold;
			}
		
			.tableStyle.last td {
				border-bottom: none;
			}
			
			.tableStyle th {
 				border-top: 1.5pt solid #333333; 
