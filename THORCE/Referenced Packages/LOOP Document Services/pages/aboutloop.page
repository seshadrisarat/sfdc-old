                return false;
            }*/
            return true;
        }
        
        function func(result) {
            $(".hidden").hide();
            $("#"+result).show();
            $("input").removeAttr("disabled");
        }
        
        function rep(result) {
            $(".hidden").hide();
            $("#rep"+result).show();
