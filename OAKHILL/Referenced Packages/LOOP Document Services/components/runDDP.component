jQuery(function() {
    jQuery.notifie({
        allowCompatibilityView: false,
        requiredVersion: 7,
        containerSelector: '#ieMsgs',
        compatibilityViewMessage: '{!JSENCODE($Label.IE_Compatibility_View_Warning)}',
        versionMessage: '{!JSENCODE($Label.IE_Higher_Version_Required)}'
    });
    
    // In some instances (possibly based on Salesforce instance -- observed so far in ap1.salesforce.com),
    // VF auto-generated apex:form action url attribute value is for mismatches salesforce domain
    // (e.g. page is on ap1.salesforce.com, action url points to c.ap1.visual.force.com). This causes
    // javascript postbacks to fail, so, as a workaround, always make sure the form action url matches
    // the domain of the current page.
    var urlRegex = /^(http[s]?:\/\/)([^\/]+)(\/.*)$/;
    var $apexForm = jQuery('[id$=":aForm"]');
    var match = $apexForm.attr('action').match(urlRegex);
    if (match && match[2] !== window.location.hostname) {
        // Mismatched action hostname
        $apexForm.attr('action', $apexForm.attr('action').replace(urlRegex, '$1' + window.location.hostname + '$3'));
    }
});

